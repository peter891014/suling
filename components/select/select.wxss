/* components/select/select.wxss */
.com-selectBox{
    width: 100%;
    height:100%;
    margin-top: 2rpx
     
}
.com-sContent{
  display: flex;
  flex-direction: row; 
    font-size:30rpx;
    color: #062f8e;
    text-align: center;
  border-radius: 10rpx;
  
    height:100%;
    line-height:100%;
}
.com-sImg{
    padding:32rpx 0 ;
    width: 34rpx;
    height: 34rpx;
    transition: all .3s ease;
}
.com-sTxt{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding:36rpx 20rpx 34rpx 140rpx;
    font-size: 30rpx;
    font-weight: 600;
    text-align: center;
   vertical-align: middle;
   letter-spacing:6rpx;
  color: #fff
}
.com-sList{
    background-color:rgba(255, 255, 255, 0.92);

    width:50%;
    position: absolute;
    border: 1px solid #e2e2e2;
    border-top: none;
    box-sizing: border-box;
    z-index: 3;
    max-height:600rpx;
    overflow: auto;
}
.com-sItem{
    height: 88rpx;
    line-height:88rpx;
    border-top: 2rpx solid #e2e2e2;
    padding: 0 20rpx;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
    color: #409eff;
}
.com-sItem:first-child{
    border-top: none;
}